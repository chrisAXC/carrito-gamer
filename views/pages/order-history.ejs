<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= isAdmin ? 'Todas las Compras' : 'Mis Compras' %> - ChrisShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h1 class="fw-bold mb-4">
                    <i class="fas fa-history me-2"></i>
                    <%= isAdmin ? 'Todas las Compras' : 'Mis Compras' %>
                </h1>
                <p class="text-muted">
                    <%= isAdmin ? 'Gestión completa de todas las órdenes del sistema' : 'Revisa todas tus compras realizadas en ChrisShop' %>
                </p>
            </div>
        </div>

        <% if (typeof orders !== 'undefined' && orders.length > 0) { %>
            <!-- Estadísticas -->
            <% if (isAdmin) { %>
            <div class="row">
                <div class="col-12">
                    <div class="order-stats mb-4 p-4">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h3 class="text-primary"><%= orders.length %></h3>
                                <p class="text-muted mb-0">Órdenes Totales</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-success">
                                    $<%= orders.reduce((sum, order) => sum + order.total, 0).toFixed(2) %>
                                </h3>
                                <p class="text-muted mb-0">Ingresos Totales</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-warning">
                                    <%= orders.filter(order => order.estado === 'completada').length %>
                                </h3>
                                <p class="text-muted mb-0">Completadas</p>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-info">
                                    <%= new Set(orders.map(order => order.usuario_id)).size %>
                                </h3>
                                <p class="text-muted mb-0">Clientes Únicos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Filtros para Admin -->
            <% if (isAdmin) { %>
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Filtros</h5>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary filter-btn active" data-filter="all">
                                    Todas (<%= orders.length %>)
                                </button>
                                <button type="button" class="btn btn-outline-success filter-btn" data-filter="completada">
                                    Completadas (<%= orders.filter(o => o.estado === 'completada').length %>)
                                </button>
                                <button type="button" class="btn btn-outline-warning filter-btn" data-filter="procesando">
                                    Procesando (<%= orders.filter(o => o.estado === 'procesando').length %>)
                                </button>
                                <button type="button" class="btn btn-outline-secondary filter-btn" data-filter="pendiente">
                                    Pendientes (<%= orders.filter(o => o.estado === 'pendiente').length %>)
                                </button>
                                <button type="button" class="btn btn-outline-danger filter-btn" data-filter="cancelada">
                                    Canceladas (<%= orders.filter(o => o.estado === 'cancelada').length %>)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Lista de Órdenes -->
            <div class="row">
                <% orders.forEach(order => { %>
                <div class="col-12 mb-4 order-item" data-estado="<%= order.estado %>">
                    <div class="order-card p-4">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <h5 class="fw-bold text-primary">#<%= order.id %></h5>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    <%= new Date(order.fecha_orden).toLocaleDateString('es-MX') %>
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    <%= new Date(order.fecha_orden).toLocaleTimeString('es-MX') %>
                                </small>
                            </div>
                            
                            <% if (isAdmin) { %>
                            <div class="col-md-2">
                                <small class="text-muted d-block">Cliente:</small>
                                <strong><%= order.usuario_nombre %></strong>
                                <% if (order.email) { %>
                                    <br><small class="text-muted"><%= order.email %></small>
                                <% } %>
                            </div>
                            <% } %>
                            
                            <div class="col-md-2">
                                <span class="badge bg-<%= 
                                    order.estado === 'completada' ? 'success' : 
                                    order.estado === 'procesando' ? 'warning' : 
                                    order.estado === 'cancelada' ? 'danger' : 'secondary' 
                                %> p-2">
                                    <i class="fas fa-<%= 
                                        order.estado === 'completada' ? 'check-circle' : 
                                        order.estado === 'procesando' ? 'sync-alt' : 
                                        order.estado === 'cancelada' ? 'times-circle' : 'clock' 
                                    %> me-1"></i>
                                    <%= order.estado.charAt(0).toUpperCase() + order.estado.slice(1) %>
                                </span>
                            </div>
                            
                            <div class="col-md-2">
                                <small class="text-muted d-block">
                                    <i class="fas fa-<%= 
                                        order.metodo_pago === 'tarjeta' ? 'credit-card' : 
                                        order.metodo_pago === 'paypal' ? 'paypal' : 'money-bill-wave' 
                                    %> me-2"></i>
                                    <%= order.metodo_pago.charAt(0).toUpperCase() + order.metodo_pago.slice(1) %>
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-<%= order.tipo_entrega === 'domicilio' ? 'truck' : 'store' %> me-2"></i>
                                    <%= order.tipo_entrega === 'domicilio' ? 'Envío' : 'Recoger' %>
                                </small>
                            </div>
                            
                            <div class="col-md-2">
                                <strong class="h5">$<%= order.total.toFixed(2) %></strong>
                            </div>
                            
                            <div class="col-md-2 text-end">
                                <div class="btn-group">
                                    <a href="/orders/<%= order.id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/orders/<%= order.id %>/ticket" class="btn btn-success btn-sm" target="_blank">
                                        <i class="fas fa-receipt"></i>
                                    </a>
                                    
                                    <% if (isAdmin) { %>
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-cog"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item change-status" href="#" data-order-id="<%= order.id %>" data-status="procesando">
                                                    <i class="fas fa-sync-alt me-2"></i>Marcar como Procesando
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item change-status" href="#" data-order-id="<%= order.id %>" data-status="completada">
                                                    <i class="fas fa-check-circle me-2"></i>Marcar como Completada
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item change-status" href="#" data-order-id="<%= order.id %>" data-status="cancelada">
                                                    <i class="fas fa-times-circle me-2"></i>Marcar como Cancelada
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                    <% } else if (order.estado === 'pendiente' || order.estado === 'procesando') { %>
                                    <button class="btn btn-outline-danger btn-sm cancel-order" data-order-id="<%= order.id %>">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                <h3 class="text-muted">
                    <%= isAdmin ? 'No hay órdenes en el sistema' : 'Aún no tienes compras realizadas' %>
                </h3>
                <p class="text-muted mb-4">
                    <%= isAdmin ? 'Cuando los clientes realicen compras, aparecerán aquí.' : 'Cuando realices tu primera compra, aparecerá aquí con todos los detalles.' %>
                </p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/products" class="btn btn-primary btn-lg">
                        <i class="fas fa-gamepad me-2"></i>Explorar Productos
                    </a>
                    <a href="/" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Ir al Inicio
                    </a>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Filtros para admin
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const filter = this.getAttribute('data-filter');
                    
                    // Actualizar botones activos
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Filtrar órdenes
                    document.querySelectorAll('.order-item').forEach(item => {
                        if (filter === 'all' || item.getAttribute('data-estado') === filter) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });

            // Cambiar estado (admin)
            document.querySelectorAll('.change-status').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const orderId = this.getAttribute('data-order-id');
                    const newStatus = this.getAttribute('data-status');
                    
                    changeOrderStatus(orderId, newStatus);
                });
            });

            // Cancelar orden (cliente)
            document.querySelectorAll('.cancel-order').forEach(btn => {
                btn.addEventListener('click', function() {
                    const orderId = this.getAttribute('data-order-id');
                    
                    if (!confirm('¿Estás seguro de que quieres cancelar esta orden?')) {
                        return;
                    }
                    
                    cancelOrder(orderId);
                });
            });
        });

        function changeOrderStatus(orderId, newStatus) {
            fetch(`/orders/${orderId}/status`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ estado: newStatus })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showNotification('Error: ' + data.error, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error de conexión', 'danger');
            });
        }

        function cancelOrder(orderId) {
            fetch(`/orders/${orderId}/cancel`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    showNotification('Error: ' + data.error, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error de conexión', 'danger');
            });
        }

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 5000);
        }
    </script>
</body>
</html>