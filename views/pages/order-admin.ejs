<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Orden #<%= order.id %> - ChrisShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin" class="text-primary">Admin</a></li>
                        <li class="breadcrumb-item"><a href="/orders" class="text-primary">Todas las Compras</a></li>
                        <li class="breadcrumb-item active">Orden #<%= order.id %></li>
                    </ol>
                </nav>
                <h1 class="fw-bold">Gestión de Orden #<%= order.id %></h1>
                <p class="text-muted">Detalles completos de la orden</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="order-details-card p-4 mb-4">
                    <h4 class="fw-bold mb-4 border-bottom pb-3">
                        <i class="fas fa-boxes me-2"></i>Productos Comprados
                    </h4>
                    
                    <% orderDetails.forEach(item => { 
                        const itemTotal = item.precio_unitario * item.cantidad;
                    %>
                    <div class="order-item mb-4 p-3">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="<%= item.imagen %>" alt="<%= item.nombre %>" 
                                     class="img-fluid rounded shadow-sm"
                                     onerror="this.src='https://via.placeholder.com/100x100/2a2a3c/ffffff?text=Producto'">
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold mb-1"><%= item.nombre %></h6>
                                <% if (item.marca) { %>
                                    <small class="text-muted">Marca: <%= item.marca %></small><br>
                                <% } %>
                                <div class="d-flex gap-3 text-muted small mt-1">
                                    <span>
                                        <i class="fas fa-hashtag me-1"></i>
                                        Cantidad: <%= item.cantidad %>
                                    </span>
                                    <span>
                                        <i class="fas fa-tag me-1"></i>
                                        $<%= item.precio_unitario.toFixed(2) %> c/u
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <strong class="h5 text-primary">$<%= itemTotal.toFixed(2) %></strong>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="total-section p-4 mb-4">
                    <h4 class="fw-bold mb-4 border-bottom pb-3">
                        <i class="fas fa-info-circle me-2"></i>Información de la Orden
                    </h4>
                    
                    <div class="info-item mb-3">
                        <strong class="d-block mb-1">Estado Actual:</strong>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-<%= 
                                order.estado === 'completada' ? 'success' : 
                                order.estado === 'procesando' ? 'warning' : 
                                order.estado === 'cancelada' ? 'danger' : 'secondary' 
                            %> p-2">
                                <%= order.estado %>
                            </span>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item cambiar-estado" data-order-id="<%= order.id %>" data-estado="pendiente">Pendiente</a></li>
                                    <li><a class="dropdown-item cambiar-estado" data-order-id="<%= order.id %>" data-estado="procesando">Procesando</a></li>
                                    <li><a class="dropdown-item cambiar-estado" data-order-id="<%= order.id %>" data-estado="completada">Completada</a></li>
                                    <li><a class="dropdown-item cambiar-estado" data-order-id="<%= order.id %>" data-estado="cancelada">Cancelada</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="info-item mb-3">
                        <strong class="d-block mb-1">Información del Cliente:</strong>
                        <div class="p-2 bg-dark rounded small">
                            <i class="fas fa-user me-2 text-primary"></i>
                            <strong><%= order.usuario_nombre %></strong><br>
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            <%= order.email %><br>
                            <% if (order.telefono) { %>
                                <i class="fas fa-phone me-2 text-primary"></i>
                                <%= order.telefono %>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="info-item mb-3">
                        <strong class="d-block mb-1">Fecha y Hora:</strong>
                        <span>
                            <i class="fas fa-calendar me-2 text-muted"></i>
                            <%= new Date(order.fecha_orden).toLocaleDateString('es-MX') %>
                        </span>
                        <br>
                        <span>
                            <i class="fas fa-clock me-2 text-muted"></i>
                            <%= new Date(order.fecha_orden).toLocaleTimeString('es-MX') %>
                        </span>
                    </div>
                    
                    <div class="info-item mb-3">
                        <strong class="d-block mb-1">Método de Pago:</strong>
                        <span>
                            <i class="fas fa-<%= 
                                order.metodo_pago === 'tarjeta' ? 'credit-card' : 
                                order.metodo_pago === 'paypal' ? 'paypal' : 'money-bill-wave' 
                            %> me-2 text-muted"></i>
                            <%= order.metodo_pago.charAt(0).toUpperCase() + order.metodo_pago.slice(1) %>
                        </span>
                    </div>
                    
                    <div class="info-item mb-3">
                        <strong class="d-block mb-1">Tipo de Entrega:</strong>
                        <span>
                            <i class="fas fa-<%= order.tipo_entrega === 'domicilio' ? 'truck' : 'store' %> me-2 text-muted"></i>
                            <%= order.tipo_entrega === 'domicilio' ? 'Envío a Domicilio' : 'Recoger en Tienda' %>
                        </span>
                    </div>
                    
                    <% if (order.direccion_entrega) { %>
                    <div class="info-item mb-4">
                        <strong class="d-block mb-1">Dirección de Entrega:</strong>
                        <div class="p-2 bg-dark rounded small">
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                            <%= order.direccion_entrega.replace(/,/g, ',<br>') %>
                        </div>
                    </div>
                    <% } %>
                    
                    <hr>
                    
                    <div class="info-item">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>Subtotal:</strong>
                            <span>$<%= (order.total / 1.16).toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>IVA (16%):</strong>
                            <span>$<%= (order.total * 0.16 / 1.16).toFixed(2) %></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <strong class="h5">Total:</strong>
                            <strong class="h5 text-primary">$<%= order.total.toFixed(2) %></strong>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="/orders/<%= order.id %>/ticket" class="btn btn-success w-100 mb-3" target="_blank">
                        <i class="fas fa-file-pdf me-2"></i>Descargar Ticket PDF
                    </a>
                    <a href="/orders" class="btn btn-outline-primary w-100">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Historial
                    </a>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Cambiar estado de orden
        document.querySelectorAll('.cambiar-estado').forEach(item => {
            item.addEventListener('click', function() {
                const orderId = this.getAttribute('data-order-id');
                const nuevoEstado = this.getAttribute('data-estado');
                
                cambiarEstadoOrden(orderId, nuevoEstado);
            });
        });

        function cambiarEstadoOrden(orderId, nuevoEstado) {
            if (!confirm(`¿Estás seguro de que quieres cambiar el estado de la orden #${orderId} a "${nuevoEstado}"?`)) {
                return;
            }

            fetch(`/orders/${orderId}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ estado: nuevoEstado })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(data.message, 'success');
                    // Recargar la página después de 1 segundo
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } else {
                    showNotification('Error: ' + data.error, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error de conexión', 'danger');
            });
        }

        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 3000);
        }
    </script>
</body>
</html>