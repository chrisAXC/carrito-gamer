<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChrisShop Tu tienda Gamer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/animations.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content text-center text-white">
                <h1 class="display-3 fw-bold mb-4 animate-fade-in-up">Bienvenido a <span class="text-warning">ChrisShop</span></h1>
                <p class="lead mb-4 animate-fade-in-up" style="animation-delay: 0.2s">Los mejores productos ChrisShop al mejor precio</p>
                <a href="/products" class="btn btn-primary btn-lg animate-fade-in-up" style="animation-delay: 0.4s">
                    <i class="fas fa-gamepad me-2"></i>Explorar Productos
                </a>
            </div>
        </div>
    </section>

    <!-- Productos Destacados -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold mb-3">Productos Destacados</h2>
                <p class="text-muted">Descubre nuestros productos más populares</p>
            </div>
            
            <div class="row">
                <% if (typeof featuredProducts !== 'undefined' && featuredProducts.length > 0) { %>
                    <% featuredProducts.forEach(product => { %>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card product-card h-100 hover-lift">
                            <img src="<%= product.imagen %>" class="card-img-top product-image" alt="<%= product.nombre %>"
                                 onerror="this.src='https://via.placeholder.com/300x200/2a2a3c/ffffff?text=Producto+Gamer'">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= product.nombre %></h5>
                                <p class="card-text text-muted flex-grow-1">
                                    <%= typeof product.descripcion !== 'undefined' ? product.descripcion.substring(0, 100) + '...' : 'Descripción no disponible' %>
                                </p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="h5 text-primary mb-0">
                                            $<%= typeof product.precio === 'number' ? product.precio.toFixed(2) : '0.00' %>
                                        </span>
                                        <% if (product.marca) { %>
                                            <span class="badge bg-secondary"><%= product.marca %></span>
                                        <% } %>
                                    </div>
                                    
                                    <!-- BOTONES SEGÚN TIPO DE USUARIO -->
                                    <% if (user && user.rol === 'cliente') { %>
                                        <!-- CLIENTE: Puede agregar al carrito -->
                                        <button class="btn btn-primary w-100" 
                                                onclick="addToCart(<%= product.id %>, '<%= product.nombre.replace(/'/g, "\\'") %>')">
                                            <i class="fas fa-cart-plus me-2"></i>Agregar
                                        </button>
                                    <% } else if (!user) { %>
                                        <!-- USUARIO NO REGISTRADO: Puede agregar (lo redirigirá a login) -->
                                        <button class="btn btn-outline-primary w-100" 
                                                onclick="addToCart(<%= product.id %>, '<%= product.nombre.replace(/'/g, "\\'") %>')">
                                            <i class="fas fa-cart-plus me-2"></i>Agregar
                                        </button>
                                    <% } else if (user && user.rol === 'admin') { %>
                                        <!-- ADMINISTRADOR: Ve botones de gestión -->
                                        <div class="btn-group w-100">
                                            <a href="/admin/products/edit/<%= product.id %>" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <button class="btn btn-danger btn-sm" onclick="deleteProduct(<%= product.id %>, '<%= product.nombre.replace(/'/g, "\\'") %>')">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </button>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center py-5">
                        <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                        <h3 class="text-muted">Próximamente más productos</h3>
                        <p class="text-muted">Estamos preparando los mejores productos chris para ti</p>
                    </div>
                <% } %>
            </div>
            
            <div class="text-center mt-4">
                <a href="/products" class="btn btn-outline-primary btn-lg">
                    Ver Todos los Productos <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Características -->
    <section class="py-5 bg-dark">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4">
                        <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                        <h4>Envío Rápido</h4>
                        <p class="text-muted">Recibe tus productos en 24-48 horas</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                        <h4>Garantía</h4>
                        <p class="text-muted">Todos nuestros productos tienen garantía</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4">
                        <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                        <h4>Soporte 24/7</h4>
                        <p class="text-muted">Estamos aquí para ayudarte</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Función para agregar al carrito - MEJORADA
        function addToCart(productId, productName) {
            if (!<%= user ? 'true' : 'false' %>) {
                // Mostrar modal de opciones en lugar de redirigir directamente
                showLoginModal(productId, productName);
                return;
            }
            
            // Si es admin, no puede agregar al carrito
            <% if (user && user.rol === 'admin') { %>
                showNotification('Los administradores no pueden agregar productos al carrito', 'warning');
                return;
            <% } %>
            
            // Lógica para usuario logueado (cliente)
            addToCartAuthenticated(productId, productName);
        }

        // Función para mostrar modal de opciones
        function showLoginModal(productId, productName) {
            // Crear modal dinámico
            const modalHTML = `
                <div class="modal fade" id="loginModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content" style="background: rgba(42, 42, 60, 0.95); backdrop-filter: blur(10px); border: 1px solid #6c63ff;">
                            <div class="modal-header border-0">
                                <h5 class="modal-title text-white">
                                    <i class="fas fa-shopping-cart me-2"></i>Agregar al Carrito
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body text-center text-white">
                                <i class="fas fa-user-lock fa-3x text-primary mb-3"></i>
                                <h4>Necesitas una cuenta</h4>
                                <p class="text-muted">Para agregar productos al carrito, necesitas tener una cuenta.</p>
                                <p class="text-warning">
                                    <strong>"${productName}"</strong> está esperando en tu carrito
                                </p>
                            </div>
                            <div class="modal-footer border-0 justify-content-center">
                                <a href="/login?redirect=<%= encodeURIComponent('/products') %>" class="btn btn-outline-primary me-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                                </a>
                                <a href="/register?redirect=<%= encodeURIComponent('/products') %>" class="btn btn-primary">
                                    <i class="fas fa-user-plus me-2"></i>Registrarse
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Remover modal existente si hay
            const existingModal = document.getElementById('loginModal');
            if (existingModal) {
                existingModal.remove();
            }
            
            // Agregar modal al DOM
            document.body.insertAdjacentHTML('beforeend', modalHTML);
            
            // Mostrar modal
            const modal = new bootstrap.Modal(document.getElementById('loginModal'));
            modal.show();
            
            // Limpiar modal cuando se cierre
            document.getElementById('loginModal').addEventListener('hidden.bs.modal', function () {
                this.remove();
            });
        }

        // Función para agregar al carrito cuando el usuario está autenticado
        function addToCartAuthenticated(productId, productName) {
            // Mostrar notificación
            const notification = document.createElement('div');
            notification.className = 'alert alert-success position-fixed';
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="fas fa-spinner fa-spin me-2"></i>
                Agregando <strong>${productName}</strong>...
                <button type="button" class="btn-close ms-2" onclick="this.parentElement.remove()"></button>
            `;
            
            document.body.appendChild(notification);
            
            // Lógica real del carrito con AJAX
            fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: 1
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Actualizar notificación de éxito
                    notification.className = 'alert alert-success position-fixed';
                    notification.innerHTML = `
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>${productName}</strong> agregado al carrito
                        <button type="button" class="btn-close ms-2" onclick="this.parentElement.remove()"></button>
                    `;
                    
                    // Actualizar contador del carrito
                    updateCartCounter(data.cartCount);
                } else {
                    // Mostrar error
                    notification.className = 'alert alert-danger position-fixed';
                    notification.innerHTML = `
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Error: ${data.error || 'No se pudo agregar al carrito'}
                        <button type="button" class="btn-close ms-2" onclick="this.parentElement.remove()"></button>
                    `;
                }
                
                // Auto-remove after 3 seconds
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 3000);
            })
            .catch(error => {
                console.error('Error:', error);
                notification.className = 'alert alert-danger position-fixed';
                notification.innerHTML = `
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Error de conexión
                    <button type="button" class="btn-close ms-2" onclick="this.parentElement.remove()"></button>
                `;
                
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 3000);
            });
        }

        // Función para actualizar contador del carrito
        function updateCartCounter(count) {
            const cartCounter = document.querySelector('.navbar .badge.bg-primary');
            if (cartCounter) {
                cartCounter.textContent = count;
                // Animación
                cartCounter.style.transform = 'scale(1.5)';
                setTimeout(() => {
                    cartCounter.style.transform = 'scale(1)';
                }, 300);
            }
        }

        // Función para eliminar producto (solo admin)
        function deleteProduct(productId, productName) {
            if (confirm(`¿Estás seguro de que quieres eliminar el producto "${productName}"?`)) {
                fetch(`/admin/products/delete/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Producto eliminado correctamente', 'success');
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    } else {
                        showNotification('Error al eliminar producto: ' + data.error, 'danger');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Error de conexión', 'danger');
                });
            }
        }

        // Función para mostrar notificaciones
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `alert alert-${type} position-fixed`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'exclamation-circle'} me-2"></i>
                ${message}
                <button type="button" class="btn-close" onclick="this.parentElement.remove()"></button>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 4000);
        }
    </script>
</body>
</html>