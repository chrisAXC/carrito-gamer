<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración - GameTech</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-dark sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active text-white" href="/admin">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/products">
                                <i class="fas fa-box me-2"></i>
                                Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/">
                                <i class="fas fa-store me-2"></i>
                                Ver Tienda
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2 fw-bold">
                        <i class="fas fa-tachometer-alt me-2"></i>Panel de Administración
                    </h1>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="stats-card bg-primary text-white p-4 rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h3 class="fw-bold"><%= productCount %></h3>
                                    <p class="mb-0">Productos</p>
                                </div>
                                <i class="fas fa-box fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="stats-card bg-success text-white p-4 rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h3 class="fw-bold"><%= userCount %></h3>
                                    <p class="mb-0">Usuarios</p>
                                </div>
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="stats-card bg-warning text-white p-4 rounded">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h3 class="fw-bold"><%= orderCount %></h3>
                                    <p class="mb-0">Órdenes</p>
                                </div>
                                <i class="fas fa-shopping-cart fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-history me-2"></i>Órdenes Recientes
                                </h5>
                            </div>
                            <div class="card-body">
                                <% if (recentOrders.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Cliente</th>
                                                    <th>Total</th>
                                                    <th>Estado</th>
                                                    <th>Fecha</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% recentOrders.forEach(order => { %>
                                                <tr>
                                                    <td>#<%= order.id %></td>
                                                    <td><%= order.usuario_nombre %></td>
                                                    <td>$<%= order.total.toFixed(2) %></td>
                                                    <td>
                                                        <span class="badge bg-<%= 
                                                            order.estado === 'completada' ? 'success' : 
                                                            order.estado === 'procesando' ? 'warning' : 
                                                            order.estado === 'cancelada' ? 'danger' : 'secondary' 
                                                        %>">
                                                            <%= order.estado %>
                                                        </span>
                                                    </td>
                                                    <td><%= new Date(order.fecha_orden).toLocaleDateString('es-MX') %></td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <p class="text-muted text-center py-3">No hay órdenes recientes</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-bolt me-2"></i>Acciones Rápidas
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <a href="/admin/products/add" class="btn btn-primary w-100 py-3">
                                            <i class="fas fa-plus me-2"></i>Agregar Producto
                                        </a>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <a href="/admin/products" class="btn btn-success w-100 py-3">
                                            <i class="fas fa-edit me-2"></i>Gestionar Productos
                                        </a>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <a href="/" class="btn btn-info w-100 py-3">
                                            <i class="fas fa-eye me-2"></i>Ver Tienda
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>